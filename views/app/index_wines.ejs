<!DOCTYPE html>
<html lang="en" dir="ltr">
    <head>
        <% include ../partials/head.ejs %>
    </head>
    <body>
        <header>
            <% include ../partials/header.ejs %>
        </header>
        <div id="wine-index-background" class="background-img">
        </div>
        <div class="container">
            <h2><%=user.name%>'s Wine Journal:</h2>
            <div class="row">
                <a class="waves-effect waves-light red darken-3 btn hoverable" href="/wines/new">Add New Entry</a>
            </div>
            <div id="wine-index-display" class="row">
            <% for (let i = 0; i < user.savedWines.length; i++) {%>
                <div class="col s12 m6 xl4">
                  <div class="card hoverable">
                    <div class="card-content black-text">
                      <p class="card-title flow-text"><%= user.savedWines[i].name %></p>
                      <p class="flow-text">Type: <%= user.savedWines[i].type %></p>
                      <p class="flow-text">Rating: <%=user.savedWines[i].rating%></p>
                      <p class="flow-text"># of Tries/Buys: <%= user.savedWines[i].numberBought %></p>
                    </div>
                    <div class="card-action">
                        <a class="btn-floating btn-large waves-effect waves-light red" href="/wines/<%= user.savedWines[i]._id%>"><i class="material-icons">add</i></a>
                        <form action="/wines/<%= user.savedWines[i]._id %>?_method=DELETE" method="POST">
                            <button class="waves-effect waves-light red darken-3 btn-large" type="submit">Delete Entry</button>
                        </form>
                    </div>
                  </div>
                </div>

            <%}%>
            </div>
            <div class="row">
            <a class="waves-effect waves-light red darken-3 btn-large" href="/">Back to Homepage</a>
            </div>
        </div>
    <% include ../partials/session_modals%>
    <% include ../partials/scripts.ejs %>
    </body>
</html>
